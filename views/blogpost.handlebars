<div class="container">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Posted by: {{this.user.name}} on {{format_date this.createdAt}}</h6>
        <p class="card-text">{{post.content}}</p>
      </div>
    </div>

    {{#if post.comments.length}}
      <div class="comments">
        <h5>Comments:</h5>
        {{#each post.comments}}
          <div class="comment mb-3">
            <p><strong>{{this.user.name}}:</strong> {{this.comment_text}} ({{format_date this.createdAt}})</p>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No comments yet. Be the first to comment!</p>
    {{/if}}

    {{#if logged_in}}
      <form id="comment-form" data-post-id="{{this.id}}">
        <div class="form-group">
          <label for="comment-text">Add a comment:</label>
          <textarea class="form-control" id="comment-text" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    {{else}}
      <p>Please <a href="/login">log in</a> to add a comment.</p>
    {{/if}}
  </div>

  <script src="../public/js/comment.js"></script>