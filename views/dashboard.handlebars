{{!-- views/dashboard.handlebars --}}
{{#if posts.length}}
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
      <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
    </div>
  {{/each}}
{{else}}
  <p>No posts found.</p>
{{/if}}

<button id="new-post-btn">New Post</button>

<div id="post-form-container" style="display: none;">
  <form id="post-form">
    <input type="text" id="post-title" placeholder="Post Title" required />
    <textarea id="post-content" placeholder="Post Content" required></textarea>
    <button type="submit">Submit</button>
  </form>
</div>
 <script src="/js/dashboard.js"></script>